{
  "name": "server",
  "version": "1.0.0",
  "description": "backend",
  "private": true,
  "main": "./src/server.ts",
  "engines": {
    "node": ">=16 <17",
    "npm": ">=8 <9"
  },
  "scripts": {
    "start": "node -r tsconfig-paths/register ./src/server.js",
    "start:dev": "nodemon --exec ts-node --files -r tsconfig-paths/register ./src/server.ts",
    "lint": "npx eslint \"./src/**/*.ts\" --fix",
    "typeorm": "ts-node node_modules/typeorm/cli.js",
    "add-migration": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:generate -n",
    "migrate": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:run",
    "migration-revert": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:revert",
    "generate-seed": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:create -d ./src/data/seeders -n",
    "seed": "ts-node -r tsconfig-paths/register ./src/data/seeders",
    "build:ts": "tsc && tscpaths -p tsconfig.json --src ./src --out ./build/src",
    "build:copy": "cp -r public package.json package-lock.json build && copyfiles -u 1 src/**/*.html build/src",
    "build": "npm run build:ts && npm run build:copy",
    "prod": "node --max-old-space-size=1024 -r tsconfig-paths/register ./src/server.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-sdk": "2.7.0",
    "@types/bcrypt": "5.0.0",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/handlebars": "4.1.0",
    "@types/jsonwebtoken": "8.5.8",
    "@types/multer": "1.4.7",
    "@types/nodemailer": "6.4.4",
    "@types/swagger-ui-express": "4.1.3",
    "@types/uuid": "8.3.4",
    "copyfiles": "2.4.1",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "growup-shared": "file:../shared/build",
    "nodemon": "2.0.15",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "3.12.0",
    "tscpaths": "0.0.9"
  },
  "dependencies": {
    "aws-sdk": "2.1073.0",
    "bcrypt": "5.0.1",
    "cors": "2.8.5",
    "dotenv": "14.3.2",
    "express": "4.17.2",
    "handlebars": "4.7.7",
    "jsonwebtoken": "8.5.1",
    "multer": "1.4.4",
    "nodemailer": "6.7.2",
    "pg": "8.7.1",
    "pg-connection-string": "2.5.0",
    "pino": "7.6.5",
    "pino-pretty": "7.5.1",
    "swagger-ui-express": "4.3.0",
    "ts-node": "10.4.0",
    "typeorm": "0.2.41",
    "uuid": "8.3.2"
  }
}
